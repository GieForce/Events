@using System.Collections
@using EventsApplication.ViewModels
@model List<AccountViewModel>
@{
    ViewBag.Title = "Reserveer";
}
@Styles.Render("/content/home.css")
<head>
    <link href="~/Content/DateTime/bootstrap-datepicker3.min.css" rel="stylesheet" />
</head>
<h2>Reserveren</h2>
<hr />
<div class="container">
    @using (Html.BeginForm("Accounts", "Reserveer", FormMethod.Post))
    {
        <div class="row">
            <h4 class="pull-left">4. Accounts</h4>
        </div>
        <hr />
        <div class="container">
            @for (int i  = 0; i < Model.Count(); i++)
            {
                <div class="col-md-6">
                    @{
                        int nummer = i + 1;
                    }
                    <h4>Account @nummer</h4>
                    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                    <div class="form-group">
                        @Html.LabelFor(model => model[i].Gebruikersnaam, htmlAttributes: new {@class = "control-label col-md-6"})
                        <div class="col-md-6">
                            @Html.EditorFor(model => model[i].Gebruikersnaam, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model[i].Gebruikersnaam, "", new {@class = "text-danger"})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model[i].Email, htmlAttributes: new {@class = "control-label col-md-6"})
                        <div class="col-md-6">
                            @Html.EditorFor(model => model[i].Email, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model[i].Email, "", new {@class = "text-danger"})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model[i].Wachtwoord, htmlAttributes: new {@class = "control-label col-md-6"})
                        <div class="col-md-6">
                            @Html.EditorFor(model => model[i].Wachtwoord, new {htmlAttributes = new {@class = "form-control", @type = "password" } })
                            @Html.ValidationMessageFor(model => model[i].Wachtwoord, "", new {@class = "text-danger"})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model[i].Telefoonnummer, htmlAttributes: new {@class = "control-label col-md-6"})
                        <div class="col-md-6">
                            @Html.EditorFor(model => model[i].Telefoonnummer, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model[i].Telefoonnummer, "", new {@class = "text-danger"})
                        </div>
                    </div>
                </div>
            }
        </div>
        <hr/>
        <div class="row">
            <span class="pull-left"><a href="/reserveer/Gegevens" class="btn btn-primary" role="button">Vorige</a></span>
            <span class="pull-right"><input type="submit" name="submitbutton" value="Volgende" class="btn btn-primary" /></span>
        </div>
    }
</div>