@{
    ViewBag.Title = "Aanwezig";
}
@if (Session["adminLogin"] != null)
{
    if (Session["adminLogin"].ToString() == "true")
    {
        using (Html.BeginForm("LogOff", "Toegangs", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()

            <ul class="nav navbar-nav navbar-right">
                <li>
                    @Html.ActionLink("Aanwezige mensen", "Aanwezig", "Toegangs", routeValues: null, htmlAttributes: new { id = "Aanwezige" })
                </li>
                <li>
                    @Html.ActionLink("AanwezigAfwezig", "AanwezigAfwezig", "Toegangs", routeValues: null, htmlAttributes: new { id = "AanwezigAfwezig" })
                </li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
            </ul>
        }
    }
    else
    {

    }
}