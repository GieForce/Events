@model EventsApplication.ViewModels.MediaBerichtViewModel

<div class="col-md-8 col-md-offset-4">
    @using (Html.BeginForm("CreateNewMediaBericht", "MediaSharing", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        Html.EnableClientValidation(true);
        <div class="form-horizontal">
            <h4>Bestand</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.DropDownListFor(m => m.selectedCategorieId, new SelectList(Model.categorieList, "Categorie"), new {@class="form-control"})

            <div class="form-group">
                @Html.LabelFor(model => model.bestandslocatie, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.bestandslocatie, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.bestandslocatie, "", new { @class = "text-danger" })
                </div>
            </div>

            <form method="post" enctype="multipart/form-data">
  
                <label for="file">Filename:</label>
                <input type="file" name="file" id="file" accept=".jpeg" />

                <input type="submit" />
            </form>
        </div>
    }
</div>