@using EventsApplication.Models
@model EventsApplication.ViewModels.AccountViewModel

@{
    ViewBag.Title = "Materialen";
}

<h3>Materialen bij Account @Model.Account.Gebruikersnaam</h3>

<table class="table">
    <tr>
        <th>
               Categorie
        </th>
        <th>
            Merk
        </th>
        <th>
            Serie
        </th>
        <th>
            Typenummer
        </th>
        <th>
            Prijs
        </th>
        <th>
            Product-id
        </th>
        <th>
            Product-volgnummer
        </th>
        <th>
            Product-barcode
        </th>
    </tr>

@foreach (ProductExemplaar productexemplaar in Model.Reservering.ProductExemplaar) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => productexemplaar.Product.Categorie.Naam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => productexemplaar.Product.Merk)
        </td>
        <td>
            @Html.DisplayFor(modelItem => productexemplaar.Product.Serie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => productexemplaar.Product.Typenummer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => productexemplaar.Product.Prijs)
        </td>
        <td>
            @Html.DisplayFor(modelItem => productexemplaar.Product_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => productexemplaar.Volgnummer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => productexemplaar.Barcode)
        </td>
        @*<td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>*@
    </tr>
}
    <p>@Html.ActionLink("Terug", "Index")</p>
    
</table>
